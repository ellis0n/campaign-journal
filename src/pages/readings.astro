---
import { type CollectionEntry, getCollection } from 'astro:content';
import Layout from '../layouts/Layout.astro';

const readings: CollectionEntry<"readings">[] = await getCollection("readings");

---
<Layout title="Readings">

    <div class="w-full pt-20">
        <ul class="flex justify-center">
            {readings.map((reading) => {
                if (reading.data.draft !== true) {
                    return (
                        <li class="w-1/2 md:w-1/3 lg:w-1/4 xl:w-1/5 p-4">
                            <a href={`readings/${reading.slug}`} class="block">
                                <div>
                                {reading.data}
                                </div>
                                <div class="bg-jasper rounded-lg shadow-lg overflow-hidden flex justify-center">
                                    <div class="p-4">
                                        <h3 class="text-lg font-semibold text-night">{reading.data.title}</h3>
                                        
                                    </div>
                                </div>
                            </a>
                        </li>
                    )
                }
            })}
        </ul>
    </div>
</Layout>